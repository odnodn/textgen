<div>
    <h2>
        <button class="btn btn-primary float-right" (click)="showAdd()">
            <span class="fa fa-plus"></span>
            <span  translate>
            Create
            </span>
        </button>
    </h2>
    <div class="row">
    </div>
    <br/>
    <div  *ngIf="entities">
        <table class="table table-striped  dt-responsive nowrap">
            <thead>
            <tr>
                {% for prop in genUtils.allSingleProps(entity) -%}
                    <th><span translate>{{ prop.name | capitalize }}</span> <span class="fa fa-sort"></span></th>
                {% endfor %}
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr *ngFor="let e of entities ">
            <!--
                <td><a [routerLink]="['../travel-quote', travelQuote.id ]"> entity.id </a></td>
                -->
                {% for prop in genUtils.allSingleProps(entity) -%}
                    <td> {{ '{{' }}e.{{ prop.name }}{{ '}}' }}</td>
                {% endfor %}
                <td class="text-right">
                    <button class="btn btn-default" (click)="showEdit(e)">
                        <span class="fa fa-edit"></span>
                    </button>
                    <button class="btn btn-danger" (click)="delete(e)">
                        <span class="fa fa-trash"></span>
                    </button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
